<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RubinPortfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RubinPortfolio.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark">
    <div class="container bg-white px-0" style="--bs-bg-opacity: .2;">
        <header class="bg-dark">
            <div class="my-4" id="site-brand">
                <h1><a class="text-white fw-normal fs-1 text-decoration-none" asp-area="" asp-page="/Index">Sam Rubin Portfolio</a></h1>
                <h2 class="fw-light fs-4">Game Devlopment Portfolio</h2>
            </div>

            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="--bs-bg-opacity: .5;">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Experience">Experience</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" id="resume-download">Resume</a> <!--This link will trigger a browser download for Sam's resume.-->
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" id="contact-button">Contact Me</a> <!--This tag will not navigate to a page, but will open a gmail prompt to send sam an email.-->
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        
        <main role="main" class="pb-3 px-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Sam Rubin Portfolio, Coded by <a href="https://github.com/dcook3" target="_blank" ref="no-referrer">Dylan Cook</a> - <a id="contact-button2">Contact Sam</a> <!--Similar to above, tag will not navigate to a page, but will open a gmail prompt to send sam an email.-->
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>